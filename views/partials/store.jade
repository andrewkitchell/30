div.main
  div.well

  div.shopping-cart
    img.guide-in-cart(ng-repeat='item in items', src='{{item.image}}', width='80px', ng-click="removeFromCart(guide)")
    div total: {{totalCost}}

  //- THIS IS A TEST !  http://jsfiddle.net/slav123/75m7e/3/

  div
    table.table
      tr
        th Description
        th Qty
        th Cost
        th Total
        th

      tr(ng:repeat="item in items")
        td
          input(type="text", ng:model="item.language")
        td
          input(type="number", ng:model="item.qty", ng:required)
        td
          input(type="number", ng:model="item.cost", ng:required)
        td {{item.qty * item.cost | currency}}
